<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <RelativeLayout
        android:background="@drawable/dialog_background"
        android:padding="10dp"
        android:layout_height="wrap_content"
        android:layout_width="300dp">

        <include
            android:layout_width="match_parent"
            android:layout_height="60dp"
            layout="@layout/include_title_dialog" />

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <RelativeLayout
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/imageView_emblem">

                    <include
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        layout="@layout/include_emblem" />

                    <android.support.v7.widget.AppCompatImageView
                        android:background="@mipmap/fab_add_product"
                        app:backgroundTint="@color/white"
                        android:layout_centerInParent="true"
                        android:layout_width="50dp"
                        android:layout_height="50dp" />
                </RelativeLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:id="@+id/layout_input"
                    android:layout_below="@+id/imageView_emblem"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginTop="20dp">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:background="?attr/theme_color_L4">

                        <TextView
                            android:text="제품명"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="5dp"
                            android:textColor="?attr/theme_color_N"
                            android:textSize="14dp"
                            android:layout_weight="0"
                            android:layout_width="50dp"
                            android:textStyle="bold" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/editText_name"
                            android:background="@color/transparent"
                            android:textColor="?attr/theme_color_D3"
                            android:textSize="20dp"
                            android:maxLength="16"
                            android:maxLines="2"
                            android:layout_weight="1"
                            android:layout_marginStart="15dp"
                            android:inputType="textMultiLine"
                            android:imeOptions="actionDone" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:background="?attr/theme_color_L4"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:text="원가"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="5dp"
                            android:textColor="?attr/theme_color_N"
                            android:textSize="14dp"
                            android:layout_weight="0"
                            android:layout_width="50dp"
                            android:textStyle="bold" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/editText_cost"
                            android:background="@color/transparent"
                            android:textColor="?attr/theme_color_D3"
                            android:textSize="20dp"
                            android:maxLength="10"
                            android:maxLines="1"
                            android:layout_weight="1"
                            android:layout_marginStart="15dp"
                            android:inputType="number"
                            android:numeric="signed" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:background="?attr/theme_color_L4"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:text="판매가"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="5dp"
                            android:textColor="?attr/theme_color_N"
                            android:textSize="14dp"
                            android:layout_weight="0"
                            android:layout_width="50dp"
                            android:textStyle="bold" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/editText_price"
                            android:background="@color/transparent"
                            android:textColor="?attr/theme_color_D3"
                            android:textSize="20dp"
                            android:maxLength="10"
                            android:maxLines="1"
                            android:layout_weight="1"
                            android:layout_marginStart="15dp"
                            android:inputType="number"
                            android:numeric="signed" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:background="?attr/theme_color_L4"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:text="잔존가"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="5dp"
                            android:textColor="?attr/theme_color_N"
                            android:textSize="14dp"
                            android:layout_weight="0"
                            android:layout_width="50dp"
                            android:textStyle="bold" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/editText_residual"
                            android:background="@color/transparent"
                            android:textColor="?attr/theme_color_D3"
                            android:textSize="20dp"
                            android:maxLength="10"
                            android:maxLines="1"
                            android:layout_weight="1"
                            android:layout_marginStart="15dp"
                            android:inputType="number"
                            android:numeric="signed"
                            android:textColorHint="?attr/theme_color_L1"
                            android:hint="선택사항" />

                    </LinearLayout>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="false"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/layout_input"
                    android:background="?attr/theme_color_L1"
                    android:layout_marginTop="15dp">

                    <Button
                        android:text="완료"
                        android:layout_width="90dp"
                        android:layout_height="40dp"
                        android:id="@+id/button_ok"
                        android:textColor="@color/white"
                        android:background="@drawable/button_ripple_rectangle" />
                </RelativeLayout>

            </RelativeLayout>
        </ScrollView>

    </RelativeLayout>
</RelativeLayout>