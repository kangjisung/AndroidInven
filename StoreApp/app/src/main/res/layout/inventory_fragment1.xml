<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/layout_back"
        android:layout_marginTop="-60dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="2000dp"
            android:layout_marginBottom="-1000dp"
            android:layout_marginTop="-1000dp"
            android:layout_centerInParent="true">

            <android.support.v7.widget.AppCompatImageView
                android:background="@drawable/shape_circle"
                app:backgroundTint="?attr/theme_color_D3"
                android:layout_height="1000dp"
                android:layout_width="1000dp"
                android:layout_marginEnd="-500dp"
                android:layout_marginStart="-500dp"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="50dp" />

            <android.support.v7.widget.AppCompatImageView
                android:background="@drawable/shape_circle"
                app:backgroundTint="@color/gray245"
                android:layout_height="1000dp"
                android:layout_width="1000dp"
                android:layout_marginEnd="-500dp"
                android:layout_marginStart="-500dp"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp" />
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-60dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:id="@+id/layout_body1"
            android:layout_height="wrap_content"
            android:layout_above="@+id/layout_body2"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="35dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <android.support.v7.widget.AppCompatImageView
                    android:layout_weight="1"
                    android:background="@mipmap/icon_bread"
                    app:backgroundTint="?attr/theme_color_L1"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="빵이름"
                    android:textSize="30dp"
                    android:id="@+id/bdName"
                    android:layout_gravity="center"
                    android:textColor="?attr/theme_color_L1"
                    android:textStyle="bold"
                    android:layout_marginTop="-5dp" />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:id="@+id/layout_body2"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <TextView
                    android:text="오늘의 최적재고량"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView2"
                    android:textColor="@color/gray120"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:textSize="18dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="!num"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:id="@+id/editText3"
                    android:layout_centerInParent="true"
                    android:layout_below="@+id/textView2"
                    android:inputType="number|numberSigned"
                    android:padding="0dp"
                    android:background="@color/transparent"
                    android:textColor="@color/gray120"
                    android:layout_weight="1"
                    android:textSize="48dp"
                    android:layout_marginTop="-3dp"
                    android:focusable="false"
                    android:focusableInTouchMode="false" />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/layout_body3"
            android:layout_below="@+id/layout_body2"
            android:layout_marginTop="30dp"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                app:cardCornerRadius="15dp"
                android:layout_width="250dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/white"
                android:layout_height="55dp"
                android:id="@+id/card_1"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/card_2"
                android:layout_marginTop="-25dp"
                android:layout_marginBottom="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <android.support.v7.widget.AppCompatImageView
                        app:backgroundTint="?attr/theme_color_D4"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:layout_margin="2dp"
                        android:background="@drawable/shape_rectangle_rad_15dp" />

                    <TextView
                        android:text="판매량"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"
                        android:textSize="14dp"
                        android:layout_marginBottom="6dp" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:id="@+id/card_2"
                app:cardCornerRadius="5dp"
                app:cardElevation="3dp"
                android:layout_marginTop="25dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layout_body2"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="10dp">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:visibility="gone">

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true">

                                <android.support.v7.widget.AppCompatImageView
                                    android:layout_weight="1"
                                    android:background="@drawable/shape_ring_2dp"
                                    app:backgroundTint="?attr/theme_color_D1"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_width="14dp"
                                    android:layout_height="14dp" />

                                <EditText
                                    android:layout_width="match_parent"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/SeekBarTxt1"
                                    android:gravity="center"
                                    android:hint="비관"
                                    android:text="!n"
                                    android:textSize="30dp"
                                    android:numeric="integer"
                                    android:background="@color/transparent"
                                    android:textColor="?attr/theme_color_D1"
                                    android:padding="0dp"
                                    android:layout_marginBottom="-5dp"
                                    android:layout_marginTop="-5dp" />

                                <TextView
                                    android:text="비관"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_gravity="center_horizontal"
                                    android:padding="0dp"
                                    android:textSize="14dp"
                                    android:textColor="?attr/theme_color_D1" />

                            </LinearLayout>

                        </RelativeLayout>

                        <View
                            android:background="@color/gray220"
                            android:layout_weight="0"
                            android:layout_gravity="center"
                            android:layout_height="30dp"
                            android:layout_width="2dp"
                            android:visibility="gone" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true">

                                <android.support.v7.widget.AppCompatImageView
                                    android:layout_weight="1"
                                    android:background="@drawable/shape_ring_2dp"
                                    app:backgroundTint="?attr/theme_color_D2"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_width="14dp"
                                    android:layout_height="14dp" />

                                <EditText
                                    android:layout_width="match_parent"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/SeekBarTxt2"
                                    android:gravity="center"
                                    android:hint="비관"
                                    android:text="!n"
                                    android:textSize="30dp"
                                    android:numeric="integer"
                                    android:background="@color/transparent"
                                    android:textColor="?attr/theme_color_D2"
                                    android:padding="0dp"
                                    android:layout_marginBottom="-5dp"
                                    android:layout_marginTop="-5dp" />

                                <TextView
                                    android:text="선택"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_gravity="center_horizontal"
                                    android:padding="0dp"
                                    android:textSize="14dp"
                                    android:textColor="?attr/theme_color_D2" />

                            </LinearLayout>

                        </RelativeLayout>

                        <View
                            android:background="@color/gray220"
                            android:layout_weight="0"
                            android:layout_gravity="center"
                            android:layout_height="30dp"
                            android:layout_width="2dp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true">

                                <android.support.v7.widget.AppCompatImageView
                                    android:layout_weight="1"
                                    android:background="@drawable/shape_ring_2dp"
                                    app:backgroundTint="?attr/theme_color_D3"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_width="14dp"
                                    android:layout_height="14dp" />

                                <EditText
                                    android:layout_width="match_parent"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/SeekBarTxt3"
                                    android:gravity="center"
                                    android:hint="비관"
                                    android:text="!n"
                                    android:textSize="30dp"
                                    android:numeric="integer"
                                    android:background="@color/transparent"
                                    android:textColor="?attr/theme_color_D3"
                                    android:padding="0dp"
                                    android:layout_marginBottom="-5dp"
                                    android:layout_marginTop="-5dp" />

                                <TextView
                                    android:text="추천"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_gravity="center_horizontal"
                                    android:padding="0dp"
                                    android:textSize="14dp"
                                    android:textColor="?attr/theme_color_D3" />

                            </LinearLayout>

                        </RelativeLayout>

                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                app:cardCornerRadius="15dp"
                android:layout_width="250dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white"
                android:layout_height="37dp"
                android:id="@+id/card_3"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <android.support.v7.widget.AppCompatImageView
                        app:backgroundTint="?attr/theme_color_L2"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_margin="2dp"
                        android:background="@drawable/shape_rectangle_rad_15dp" />

                    <io.apptik.widget.MultiSlider
                        android:id="@+id/graph1_multiSlider"
                        app:thumbNumber="3"
                        app:thumbColor="?attr/theme_color_N"
                        app:rangeColor="?attr/theme_color_N"
                        android:layout_width="match_parent"
                        android:layout_marginEnd="5dp"
                        android:layout_marginStart="5dp"
                        android:layout_centerInParent="true"
                        android:layout_height="match_parent" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </RelativeLayout>

        <Button
            android:text="가격정보"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:id="@+id/button3"
            android:layout_alignParentBottom="true"
            android:visibility="invisible" />

        <Button
            android:text="변경하기"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:id="@+id/graph1_changeBtn"
            android:layout_gravity="center"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content"
            android:visibility="invisible" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:background="@color/gray200"
            android:layout_weight="1"
            android:layout_height="24dp"
            android:visibility="gone">

            <View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_margin="1dp" />

            <View
                android:layout_width="20dp"
                android:layout_height="9dp"
                android:background="@drawable/stat_drawer"
                android:layout_centerInParent="true" />

            <Button
                android:layout_width="match_parent"
                android:id="@+id/showStatBtn"
                android:layout_alignParentBottom="true"
                android:background="@drawable/button_ripple_rectangle"
                android:layout_height="match_parent" />
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginTop="180dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_height="200dp"
                android:layout_marginBottom="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:layout_marginBottom="5dp">


                    <ImageView
                        android:id="@+id/chart1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/layout_info"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="5dp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:id="@+id/layout_line"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_below="@+id/layout_info">

                        <android.support.v7.widget.AppCompatImageView
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:background="@drawable/shape_line_dash"
                            app:backgroundTint="@color/red"
                            android:layout_height="match_parent"
                            android:layout_width="1dp"
                            android:layout_centerInParent="true"
                            android:visibility="gone" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="20dp">

                    </RelativeLayout>

                </RelativeLayout>
            </android.support.v7.widget.CardView>

        </android.support.design.widget.CoordinatorLayout>

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab_stat_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_colorNormal="?attr/theme_color_type1"
            app:fab_colorPressed="@color/gray120"
            app:layout_anchorGravity="bottom|end"
            android:src="@mipmap/icon_check_white"
            android:elevation="5dp"
            android:layout_marginEnd="15dp"
            android:visibility="invisible" />
    </RelativeLayout>


</RelativeLayout>