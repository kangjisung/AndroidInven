<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_size"
    android:id="@+id/layout_title">

    <TextView
        android:text="!제목"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray60"
        android:textSize="22dp"
        android:layout_centerInParent="true"
        android:id="@+id/inc_tv_title" />

    <RelativeLayout
        android:layout_width="@dimen/title_size"
        android:layout_height="@dimen/title_size"
        android:id="@+id/inc_btn_back"
        android:layout_marginStart="-3dp">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:backgroundTint="@color/gray60"
            android:layout_centerInParent="true"
            android:background="@mipmap/icon_arrow_left" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="@dimen/title_size"
        android:layout_height="@dimen/title_size"
        android:layout_alignParentEnd="true"
        android:id="@+id/inc_btn_ok">

        <android.support.v7.widget.AppCompatImageView
            app:backgroundTint="@color/gray60"
            android:layout_centerInParent="true"
            android:background="@mipmap/icon_check"
            android:layout_width="35dp"
            android:layout_height="35dp" />

    </RelativeLayout>

</RelativeLayout>