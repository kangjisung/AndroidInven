<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/layout_back">

        <View
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="?attr/theme_color_D2" />

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@drawable/shape_gradient_border_y"
            android:rotation="180" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:paddingBottom="60dp">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:background="?attr/theme_color_D4"
                    android:layout_height="120dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp">

                        <TextView
                            android:text="예상매출"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/gray245"
                            android:textSize="16dp" />

                        <TextView
                            android:text="!num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="36dp"
                            android:id="@+id/tv_title_q" />

                    </LinearLayout>

                    <android.support.v7.widget.AppCompatImageView
                        android:background="@mipmap/icon_notice2_event"
                        app:backgroundTint="?attr/theme_color_D3"
                        android:layout_height="70dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="20dp"
                        android:layout_width="70dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginTop="5dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:layout_margin="5dp">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0">

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <android.support.v7.widget.AppCompatImageView
                                    android:background="@mipmap/icon_sort_desc"
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:layout_weight="0"
                                    android:layout_gravity="center_horizontal"
                                    app:backgroundTint="@color/gray160" />

                                <TextView
                                    android:text="원가"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0"
                                    android:textSize="14dp"
                                    android:layout_gravity="center_horizontal"
                                    android:textColor="@color/gray160" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="!num"
                                    android:textColor="@color/gray160"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="-6dp"
                                    android:id="@+id/tv_cost"
                                    android:textSize="26dp" />

                            </LinearLayout>

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <android.support.v7.widget.AppCompatImageView
                                    android:background="@mipmap/icon_sort_asc"
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:layout_weight="0"
                                    android:layout_gravity="center_horizontal"
                                    app:backgroundTint="@color/gray160" />

                                <TextView
                                    android:text="판매가"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0"
                                    android:textSize="14dp"
                                    android:layout_gravity="center_horizontal"
                                    android:textColor="@color/gray160" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="!num"
                                    android:textColor="@color/gray160"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="-6dp"
                                    android:id="@+id/tv_price"
                                    android:textSize="26dp" />

                            </LinearLayout>
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:background="@color/gray220"
                            android:layout_weight="0"
                            android:layout_margin="10dp"
                            android:layout_height="1dp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp">

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="0">

                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                    <android.support.v7.widget.AppCompatImageView
                                        android:background="@mipmap/icon_star"
                                        app:backgroundTint="?attr/theme_color_N"
                                        android:layout_width="15dp"
                                        android:layout_height="15dp"
                                        android:layout_weight="0"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginEnd="3dp" />

                                    <TextView
                                        android:text="최적"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0"
                                        android:textSize="14dp"
                                        android:layout_gravity="center_vertical"
                                        android:textColor="?attr/theme_color_N" />

                                </LinearLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="!num"
                                    android:textColor="?attr/theme_color_N"
                                    android:textSize="20dp"
                                    android:id="@+id/tv_optinum_q" />

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="!num"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:textColor="?attr/theme_color_N"
                                android:textSize="30dp"
                                android:id="@+id/tv_optinum_v" />

                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:background="@color/gray220"
                            android:layout_weight="0"
                            android:layout_margin="10dp"
                            android:layout_height="1dp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp">

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="0">

                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                    <android.support.v7.widget.AppCompatImageView
                                        android:background="@mipmap/icon_select"
                                        app:backgroundTint="@color/gray140"
                                        android:layout_width="15dp"
                                        android:layout_height="15dp"
                                        android:layout_weight="0"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginEnd="3dp" />

                                    <TextView
                                        android:text="선택"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0"
                                        android:textSize="14dp"
                                        android:layout_gravity="center_vertical"
                                        android:textColor="@color/gray140" />

                                </LinearLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="!num"
                                    android:textColor="@color/gray140"
                                    android:textSize="20dp"
                                    android:id="@+id/tv_select_q" />

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="!num"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:textColor="@color/gray140"
                                android:textSize="30dp"
                                android:id="@+id/tv_select_v" />

                        </RelativeLayout>


                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:background="?attr/theme_color_L3"
                    android:layout_height="40dp">

                    <io.apptik.widget.MultiSlider
                        android:id="@+id/graph4_multiSlider"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:thumbNumber="1"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="30dp"
                        android:layout_centerInParent="true"
                        app:rangeColor="?attr/theme_color_N"
                        app:thumbColor="?attr/theme_color_N" />
                </RelativeLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>
    </RelativeLayout>

</RelativeLayout>