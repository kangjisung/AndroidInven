<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="?attr/theme_color_D4"
            android:layout_height="30dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:gravity="center_vertical">

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="20dp"
                    android:layout_weight="1"
                    android:background="@mipmap/fab_sort"
                    app:backgroundTint="?attr/theme_color_L2"
                    android:layout_height="20dp"
                    android:layout_marginEnd="5dp" />

                <TextView
                    android:text="정렬"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/theme_color_L2"
                    android:layout_centerVertical="true"
                    android:textSize="16dp"
                    android:layout_weight="1" />

            </LinearLayout>

        </RelativeLayout>

        <android.support.design.widget.TabLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="?attr/theme_color_L2"
            android:id="@+id/tabLayout"
            app:tabTextAppearance="@style/LikeRoomTheme.Tab.TabText"
            app:tabIndicatorHeight="3dp">

            <android.support.design.widget.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="오름차순 ▲" />

            <android.support.design.widget.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="내림차순 ▼" />

        </android.support.design.widget.TabLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/btn_sort_1"
                    android:background="@drawable/button_ripple_rectangle" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp">

                    <TextView
                        android:text="이름 순"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:textColor="@color/gray80"
                        android:layout_weight="1"
                        android:id="@+id/tv_sort_1" />

                    <android.support.v7.widget.AppCompatImageView
                        android:layout_width="20dp"
                        android:id="@+id/iv_sort_1"
                        android:layout_weight="1"
                        android:background="@mipmap/icon_check"
                        app:backgroundTint="?attr/theme_color_type1"
                        android:layout_height="20dp"
                        android:layout_marginStart="5dp"
                        android:visibility="invisible" />

                </LinearLayout>

            </RelativeLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/gray200"
                android:layout_weight="0"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/btn_sort_2"
                    android:background="@drawable/button_ripple_rectangle" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp">

                    <TextView
                        android:text="등록일 순"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:textColor="@color/gray80"
                        android:layout_weight="1"
                        android:id="@+id/tv_sort_2" />

                    <android.support.v7.widget.AppCompatImageView
                        android:layout_width="20dp"
                        android:id="@+id/iv_sort_2"
                        android:layout_weight="1"
                        android:background="@mipmap/icon_check"
                        app:backgroundTint="?attr/theme_color_type1"
                        android:layout_height="20dp"
                        android:layout_marginStart="5dp"
                        android:visibility="invisible" />

                </LinearLayout>

            </RelativeLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/gray200"
                android:layout_weight="0"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/btn_sort_3"
                    android:background="@drawable/button_ripple_rectangle" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp">

                    <TextView
                        android:text="포인트 순"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:textColor="@color/gray80"
                        android:layout_weight="1"
                        android:id="@+id/tv_sort_3" />

                    <android.support.v7.widget.AppCompatImageView
                        android:layout_width="20dp"
                        android:id="@+id/iv_sort_3"
                        android:layout_weight="1"
                        android:background="@mipmap/icon_check"
                        app:backgroundTint="?attr/theme_color_type1"
                        android:layout_height="20dp"
                        android:layout_marginStart="5dp"
                        android:visibility="invisible" />

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>