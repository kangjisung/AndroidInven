<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fab="http://schemas.android.com/tools">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab_stamp_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_colorNormal="#ef4946"
            app:fab_colorPressed="#f57977"
            android:src="@mipmap/fab_reject"
            android:layout_gravity="bottom|start"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab_stamp_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_check_white"
            app:fab_colorNormal="#55b12e"
            app:fab_colorPressed="#88d767"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp" />

    </FrameLayout>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:fab="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.github.clans.fab.FloatingActionMenu
            android:id="@+id/menu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingEnd="10dp"
            android:paddingBottom="10dp"
            fab:menu_labels_ellipsize="end"
            fab:menu_labels_singleLine="true"
            fab:menu_labels_colorNormal="@color/transparent"
            fab:menu_labels_showShadow="false"
            fab:menu_backgroundColor="@color/alpha200"
            fab:menu_icon="@mipmap/icon_floating_hamburger"
            fab:menu_colorNormal="?attr/theme_color_type1"
            fab:menu_colorPressed="@color/gray160"
            fab:menu_fab_label="">

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/fab_add_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_floating_add"
                fab:fab_colorNormal="?attr/theme_color_type1"
                fab:fab_colorPressed="@color/gray160"
                fab:fab_label="@string/user_fab_add_user"
                android:visibility="gone" />

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/fab_stamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_floating_stamp"
                fab:fab_colorNormal="?attr/theme_color_type1"
                fab:fab_colorPressed="@color/gray160"
                fab:fab_label="@string/user_fab_stamp"
                android:visibility="gone" />

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/fab_notice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_floating_notice"
                fab:fab_colorNormal="?attr/theme_color_type1"
                fab:fab_colorPressed="@color/gray160"
                fab:fab_label="@string/user_fab_notice" />

        </com.github.clans.fab.FloatingActionMenu>

    </FrameLayout>
</android.support.design.widget.CoordinatorLayout>