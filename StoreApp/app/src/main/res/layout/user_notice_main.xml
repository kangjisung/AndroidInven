<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="?attr/theme_color_D3"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_height="60dp"
        android:id="@+id/layout_title">

        <Button
            android:id="@+id/button_back"
            android:background="@mipmap/icon_left_arrow"
            style="@style/LikeRoomTheme.Button.EmptyBackground"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            app:backgroundTint="@color/white"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <TextView
            android:text="공지사항"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="22dp"
            android:layout_centerInParent="true" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_below="@+id/layout_title">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@color/gray240"
                android:layout_alignParentStart="true"
                android:id="@+id/relativeLayout"
                android:layout_marginBottom="5dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">

                    <android.support.v7.widget.AppCompatImageView
                        android:background="@mipmap/icon_plus_in_circle"
                        app:backgroundTint="@color/gray120"
                        android:layout_weight="1"
                        android:layout_marginEnd="10dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />

                    <TextView
                        android:text="새 공지를 추가하려면 터치"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="22dp"
                        android:textColor="@color/gray120"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical" />
                </LinearLayout>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/buttonNewNotice"
                    android:background="@drawable/button_ripple_rectangle" />

                <View
                    android:layout_width="match_parent"
                    android:background="@drawable/shape_line_gradient"
                    android:layout_alignParentBottom="true"
                    android:layout_height="1dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp" />
            </RelativeLayout>

            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/relativeLayout"
                android:id="@+id/listView"
                android:scrollbars="none"
                android:divider="@color/transparent" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>