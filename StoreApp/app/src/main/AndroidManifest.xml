<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.teamdk.android.bakery">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon_app"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/LikeRoomTheme">
        <activity
            android:name="com.teamdk.android.bakery.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.teamdk.android.bakery.ActivityMenu"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name="com.teamdk.android.bakery.ActivityStoreAdd" />
        <activity android:name="com.teamdk.android.bakery.setting.SettingMain" />
        <activity android:name="com.teamdk.android.bakery.setting.SettingApplication" />
        <activity android:name="com.teamdk.android.bakery.setting.SettingCreatedby" />
        <activity android:name="com.teamdk.android.bakery.inventory.InventoryMain"/>
    </application>

</manifest>